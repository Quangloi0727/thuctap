    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="latest-product">
                        <h2 class="section-title">Sản phẩm mới nhất</h2>
                        <div class="product-carousel">
                            <%
                                product.reverse().forEach(function(pr){%>
                                    <div class="single-product">
                                        <div class="product-f-image">
                                            <img src="images/img_product/<%= pr.images[0] %>" alt="" style="width: 195px;height: 243px;">
                                            <div class="product-hover">
                                                <a href="/product-detail/<%= pr._id %>" class="view-details-link"><i class="fa fa-link"></i> Chi tiết</a>
                                            </div>
                                        </div>            
                                        <h2><a href="/product-detail/<%= pr._id %>"><%= pr.name %></a></h2>
                                        <div class="product-wid-rating">
                                            <%
                                                rate.forEach(function(item){
                                                    if(pr._id.toString()==item._id.toString()){
                                                        for(let i=0;i< Math.round((item.rate / parseInt(item.length.length)));i++){%>
                                                            <i class="fa fa-star"></i>
                                                        <%}
                                                    }
                                                })
                                            %>
                                        </div>
                                        <div class="product-carousel-price">
                                            <ins><%= numeral(pr.price).format('0,0') %>₫</ins> <del><%= numeral(pr.discount).format('0,0') %>₫</del>
                                        </div> 
                                    </div>
                                <%})
                            %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End main content area -->
    
