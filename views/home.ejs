    <div class="product-widget-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="single-product-widget">
                        <h2 class="product-wid-title">Sản phẩm bán chạy</h2>
                        <!-- <a href="" class="wid-view-more">View All</a> -->
                        <%
                            for(let i=0;i<=2;i++){%>
                                <div class="single-wid-product">
                                    <img src="images/img_product/<%= productSells[i].product.images[0] %>" alt="" class="product-thumb">
                                    <h2><a href="/product-detail/<%= productSells[i].product._id %>"><%= productSells[i].product.name %></a></h2>
                                    <div class="product-wid-rating">
                                        <%
                                            rate.forEach(function(item){
                                                if(productSells[i].product._id.toString()==item._id.toString()){
                                                    for(let i=0;i< Math.round((item.rate / parseInt(item.length.length)));i++){%>
                                                        <i class="fa fa-star"></i>
                                                    <%}
                                                }
                                            })
                                        %>
                                    </div>
                                    <div class="product-wid-price">
                                        <ins><%= numeral(productSells[i].product.price).format('0,0') %>₫</ins> <del><%= numeral(productSells[i].product.discount).format('0,0') %>₫</del>
                                    </div>                            
                                </div>
                            <%}    
                        %>  
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="single-product-widget">
                        <h2 class="product-wid-title">Đã xem gần đây</h2>
                        <%
                            if(productseen.length>0){
                                productseen.reverse().forEach(function(id,index){
                                    product.forEach(function(pr){
                                        if(id.toString()==pr._id.toString() && index <=2){%>
                                            <div class="single-wid-product">
                                                <a href="#"><img src="images/img_product/<%= pr.images[0] %>" alt="" class="product-thumb"></a>
                                                <h2><a href="/product-detail/<%= pr._id %>"><%= pr.name %></a></h2>
                                                <div class="product-wid-rating">
                                                    <%
                                                        rate.forEach(function(item){
                                                            if(pr._id.toString()==item._id.toString()){
                                                                for(let i=0;i< Math.round((item.rate / parseInt(item.length.length)));i++){%>
                                                                    <i class="fa fa-star"></i>
                                                                <%}
                                                            }
                                                        })
                                                    %>
                                                </div>
                                                <div class="product-wid-price">
                                                    <ins><%= numeral(pr.price).format('0,0') %>₫</ins> <del><%= numeral(pr.discount).format('0,0') %>₫</del>
                                                </div>                            
                                            </div>
                                        <%}
                                    })
                                })
                            }else{%>
                                Danh sách đã xem rỗng !
                            <%}
                        %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="single-product-widget">
                        <h2 class="product-wid-title">Giảm giá cực mạnh </h2>
                        <%
                            sales.forEach(function(pr,index){
