<%include ./layout/menuAdmin.ejs%>
<style>
.bgm {
  background-color:#DDDDDD;
}
td {
    color: black !important;
}
th{
    background-color: black;
    color: white !important;
}
.note{
    max-width: 150px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
</style>
<!-- PAGE CONTAINER-->
<div class="page-container">
    <!-- HEADER DESKTOP-->
    <%include ./layout/headerAdmin.ejs%>
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- DATA TABLE -->
                    <h3 class="title-5 m-b-35">Danh mục hệ thống</h3>
                    <div class="table-responsive table-responsive-data2">
                        <div class="table-data__tool-right float-right m-b-10">
                            <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>Thêm danh mục</button>
                            </div>
                        </div>
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>Tên danh mục</th>
                                    <th>Mã danh mục</th>
                                    <th>Ghi chú</th>
                                    <th class="text-center">Trạng thái</th>
                                    <th class="text-center" style="padding-left: 80px;">Action</th>
                                </tr>
                                <tr>
                                    <form id="search" method="GET" action="/category">
                                        <th><input type="text" style="padding:9px;" id="name" name="name" placeholder="VD: Danh mục A"></th>
                                        <th><input type="text" style="padding:9px;" id="code" name="code" placeholder="VD: Mã danh mục A"></th>
                                        <th></th>
                                        <th class="text-center">
                                            <select name="status" class="form-control" id="status">
                                                <option value="">---Chọn tất cả---</option>
                                                <option value="true">Kích hoạt</option>
                                                <option value="false">Không kích hoạt</option>
                                            </select>
                                        </th>
                                        <th class="text-center" style="padding-left: 80px;">
                                            <button type="submit" class="au-btn-filter" style="width: 95px;background-color: #2E64FE;color: white;"><i class="zmdi zmdi-filter-list"></i>Lọc</button>
                                        </th>
                                    </form>
                                </tr>
                            </thead>
                            <tbody>
                                <%
                                    categories.forEach(function(item,index){%>
                                        <tr class="tr-shadow" data-css="<%- index%>">
                                            <td><%= item.name %></td>
                                            <td><%= item.code %></td>
                                            <td class="note" title="<%= item.note %>"><%= item.note %></td>
                                            <td class="text-center"><input type="checkbox" style="width: 20px;height: 20px;" disabled <%if(item.status==true){%>checked<%}%>></td>
                                            <td class="desc">
                                                <div class="table-data-feature">
                                                    <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                        <a href="/category-edit/<%= item._id %>"><i class="zmdi zmdi-edit"></i></a>
                                                    </button>
                                                    <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                        <i class="zmdi zmdi-delete" data-id="<%= item._id %>"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr class="spacer"></tr>
                                    <%})
                                %>
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>
        </div>
    </div>
</div>
<%include ./layout/footerAdmin%>
<script type="text/javascript" src = "https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.1/underscore-min.js"></script> 
<script src="/category/script.js"></script> 

